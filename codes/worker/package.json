{
  "name": "report_generator",
  "version": "1.0.0",
  "description": "A simple Report Generator to generate ES data",
  "main": "src/app.ts",
  "scripts": {
    "report": "node --max-old-space-size=4096 build/app.js",
    "dev": "./node_modules/nodemon/bin/nodemon.js --watch src/app.ts",
    "clean": "rm -rf ./build",
    "build": "tsc -p .",
    "prod:clean": "rm -rf ./node_modules",
    "prod:install": "yarn install --prod",
    "test": "cross-env NODE_ENV=TEST mocha --require ts-node/register './test/**/*.test.ts'"
  },
  "keywords": [
    "node",
    "es",
    "reports"
  ],
  "author": "abdul.maruf@banglalink.net",
  "license": "ISC",
  "devDependencies": {
    "@types/luxon": "^3.3.2",
    "@types/node": "^16.18.50",
    "@types/yargs": "^17.0.24",
    "cross-env": "^7.0.3",
    "nodemon": "^2.0.12",
    "source-map-support": "^0.5.20",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^8.10",
    "csv-writer": "^1.6.0",
    "dotenv": "^10.0.0",
    "luxon": "^3.4.3",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.5",
    "yargs": "^17.7.2"
  }
}
